{
    "manifest_version": 3,
    "name": "Tweet Moderator",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "options_page": "options.html",
        "content_scripts": [
      {
        "matches": [
          "https://x.com/*",
          "https://twitter.com/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  